{
  "name": "hooore-components",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build:packages && pnpm run build:editor-headless && pnpm run build:editor",
    "build:editor": "pnpm --filter \"@hooore/editor\" run build",
    "build:editor-headless": "pnpm --filter \"@hooore/editor-headless\" run build",
    "build:packages": "pnpm run install:packages && pnpm -C ./hooore-packages run build",
    "install:packages": "pnpm -C ./hooore-packages install",
    "format": "biome format --write ./packages",
    "lint": "biome lint --write ./packages",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.5.0+sha256.dbdf5961c32909fb030595a9daa1dae720162e658609a8f92f2fa99835510ca5",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
