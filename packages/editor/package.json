    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.1",
    "novel": "0.5.0",
    "react": "^18.3.1",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@hooore/typescript-config": "link:../../hooore-packages/packages/typescript-config",
    "@types/react": "^18.3.5",
    "autoprefixer": "^10.4.17",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.3.5"
  },
  "dependencies": {
    "eventsource-parser": "^0.1.0",
    "highlight.js": "^11.9.0",
    "lowlight": "^3.1.0",
    "lucide-react": "^0.244.0",
    "react-markdown": "^8.0.7",
    "tippy.js": "^6.3.7",
    "ts-pattern": "^5.0.6",
    "use-debounce": "^9.0.3"
  }
