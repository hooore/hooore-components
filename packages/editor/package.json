{
  "name": "@hooore/editor",
  "version": "1.0.0",
  "description": "Modified from https://github.com/steven-tey/novel",
  "sideEffects": false,
  "main": "dist/advance-editor.js",
  "module": "dist/advance-editor.mjs",
  "types": "dist/advance-editor.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/advance-editor.d.ts",
      "import": "./dist/advance-editor.mjs",
      "require": "./dist/advance-editor.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.types.json && tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@hooore/utils": "link:../../hooore-packages/packages/utils",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.1",
    "react": "^19.0.0",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@hooore/typescript-config": "link:../../hooore-packages/packages/typescript-config",
    "@types/react": "^19.0.2",
    "autoprefixer": "^10.4.17",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.3.5"
  },
  "dependencies": {
    "@hooore/editor-headless": "workspace:*",
    "eventsource-parser": "^3.0.0",
    "highlight.js": "^11.9.0",
    "lowlight": "^3.1.0",
    "lucide-react": "^0.469.0",
    "react-markdown": "^9.0.1",
    "tippy.js": "^6.3.7",
    "ts-pattern": "^5.0.6",
    "use-debounce": "^10.0.4"
  }
}
